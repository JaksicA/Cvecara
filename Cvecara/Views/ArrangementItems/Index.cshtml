@model IEnumerable<Cvecara.Data.Entities.ArrangementItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Arrangement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Arrangement.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  arrangementId = item.ArrangementId, itemId = item.ItemId }) |
                @Html.ActionLink("Details", "Details", new { arrangementId = item.ArrangementId, itemId = item.ItemId }) |
                @Html.ActionLink("Delete", "Delete", new { arrangementId = item.ArrangementId, itemId = item.ItemId })
            </td>
        </tr>
}
    </tbody>
</table>
