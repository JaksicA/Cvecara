@using Cvecara.Data.Entities
@model Cvecara.Data.Entities.Arrangement

@{
    ViewData["Title"] = "Details";
}

<h1>Detalji</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <dl class="row">
        @foreach(ArrangementItem arrangementItem in ViewData["ArrangementItems"] as IEnumerable<ArrangementItem>)
         {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(e => arrangementItem.Item.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(e => arrangementItem.Item.Name)
            </dd>            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(e => arrangementItem.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(e => arrangementItem.Quantity)
            </dd>
         }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Izmeni</a> |
    <a asp-action="Index">Nazad na listu</a>
</div>
